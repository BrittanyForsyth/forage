<%= render partial: "filter_mobile" %>

<div class="row">
  <%= render partial: "filter_desktop" %>

  <div class="span8">
    <div id="content-eat">
      <ol>
      <% @places.each do |place| %>
        <li>
          <p>
            <span>
            <%= link_to place.name, place %> 
            <% if place.walking_time_in_minutes %>
              <%= place.walking_time_in_minutes %> minutes away
            <% end %>
            </span>
          </p>
        </li>
      <% end %>
      </ol>
    </div>
  </div>
</div>
